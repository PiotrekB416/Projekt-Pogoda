<Window x:Class="Pogoda.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pogoda"
        mc:Ignorable="d"
        Title="About" Height="450" Width="310">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="Center">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0 50">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Prognoza pogody" Style="{StaticResource Center}"/>
        <TextBlock Grid.Row="1" Text="Piotr Bartoszewicz" Style="{StaticResource Center}"/>
        <TextBlock Grid.Row="2" Text="Aplikacja jest limitowana do 1000 użyć dziennie (ze względu na limitacje API pogodowego)" TextWrapping="Wrap" Style="{StaticResource Center}" FontSize="20"/>
        
    </Grid>
</Window>
